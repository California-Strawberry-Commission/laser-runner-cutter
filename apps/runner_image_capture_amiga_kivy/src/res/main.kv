MDBoxLayout:  # Root
    orientation: "vertical"
    padding: 10
    spacing: 10
    MDBoxLayout:  # Content
        size_hint: 1, 0.9
        orientation: "horizontal"
        spacing: 10
        MDBoxLayout:  # Configuration
            size_hint: 0.4, 1
            orientation: "vertical"
            spacing: 10
            MDLabel:  # Title
                text: "Runner Image Capture"
                size_hint_y : None
                height: 40
                text_size: self.size
                halign: "center"
                valign: "middle"
                font_size: "20sp"
                bold: True
            MDTextField:  # SaveDir
                id: save_dir
                multiline: False
                hint_text: "Save Directory"
                mode: "rectangle"
            MDTextField:  # FilePrefix
                id: file_prefix
                multiline: False
                hint_text: "File Prefix"
                mode: "rectangle"
            MDBoxLayout:  # Exposure
                orientation: "horizontal"
                adaptive_height: True
                spacing: 10
                MDTextField:
                    id: exposure_ms
                    multiline: False
                    hint_text: "Exposure (ms)"
                    input_filter: "float"
                    mode: "rectangle"
                MDFillRoundFlatButton:
                    text: "Apply"
                    font_style: "Button"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_release: app.on_exposure_apply_click()
            MDBoxLayout:  # Spacer
                size_hint_y: None
                height: 10
            MDBoxLayout:  # Capture
                orientation: "horizontal"
                adaptive_height: True
                spacing: 10
                MDBoxLayout:  # ManualCapture
                    orientation: "vertical"
                    size_hint: 0.5, 1
                    adaptive_height: True
                    spacing: 10
                    pos_hint: {"top": 1}
                    MDLabel:
                        text: "Manual"
                        size_hint_y : None
                        height: 30
                        halign: "center"
                        font_size: "18sp"
                        bold: True
                    MDFillRoundFlatButton:
                        text: "Capture single frame"
                        font_style: "Button"
                        size_hint_x: 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_release: app.on_manual_capture_click()
                MDBoxLayout:  # IntervalCapture
                    orientation: "vertical"
                    size_hint: 0.5, 1
                    adaptive_height: True
                    spacing: 10
                    pos_hint: {"top": 1}
                    MDLabel:
                        text: "Interval"
                        size_hint_y : None
                        height: 30
                        halign: "center"
                        font_size: "18sp"
                        bold: True
                    MDTextField:
                        id: interval_s
                        multiline: False
                        hint_text: "Interval (s)"
                        input_filter: "float"
                        mode: "rectangle"
                    MDFillRoundFlatButton:
                        id: interval_capture_button
                        text: "Start interval capture"
                        font_style: "Button"
                        size_hint_x: 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_release: app.on_interval_capture_click()
            MDBoxLayout:  # Spacer
                size_hint_y: None
                height: 10
            # Logs
            MDLabel:
                text: "Logs"
                size_hint_y : None
                height: 30
                halign: "center"
                font_size: "18sp"
                bold: True
            MDScrollView:
                do_scroll_x: False
                MDLabel:
                    id: logs
                    font_size: "14sp"
                    size_hint_y: None
                    size: self.texture_size
        # CameraPreview
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.6, 1
            spacing: 10
            MDDropDownItem:
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Select camera"
                on_release: app.open_camera_menu(self)
            Image:
                id: camera_preview
            MDLabel:
                id: camera_status
                text: "Camera not available"
                halign: "center"
                font_size: "18sp"
                size_hint_y: None
                size: self.texture_size
    # Footer
    MDRelativeLayout:
        size_hint: 1, 0.1
        # BackButton
        MDFillRoundFlatButton:
            text: "Quit"
            font_style: "Button"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: app.on_quit_click()
