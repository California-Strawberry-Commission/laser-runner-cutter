{
  // See https://code.visualstudio.com/docs/debugtest/tasks#vscode
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "[ros2] build workspace",
      "detail": "Build ROS 2 workspace",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/build.sh",
      "options": { "cwd": "${workspaceFolder}" },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "[ros2] build package",
      "detail": "Build single ROS 2 package",
      "type": "shell",
      "command": "colcon build --symlink-install --packages-select ${input:package} --cmake-args '-DCMAKE_EXPORT_COMPILE_COMMANDS=On'",
      "options": { "cwd": "${workspaceFolder}" },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "[ros2] debug workspace",
      "detail": "Build ROS 2 workspace with debug symbols",
      "type": "shell",
      "command": "colcon build --symlink-install  --cmake-args '-DCMAKE_BUILD_TYPE=Debug'",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "[ros2] debug package",
      "detail": "Build single ROS 2 package with debug symbols",
      "type": "shell",
      "command": "colcon build --symlink-install --packages-select ${input:package} --cmake-args '-DCMAKE_BUILD_TYPE=Debug'",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "[ros2] full run",
      "detail": "Run all of the nodes in the workspace",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/run_ros.sh",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "[ros2] launch",
      "detail": "Run a single launch file",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source ${workspaceFolder}/scripts/setup.sh && ros2 launch ${input:package} ${input:launch_file}"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "[ros2] test workspace",
      "detail": "Run all unit tests and show results.",
      "type": "shell",
      "command": "colcon test && colcon test-result --all",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "package",
      "type": "promptString",
      "description": "Package name",
      "default": "my_package"
    },
    {
      "id": "launch_file",
      "type": "promptString",
      "description": "Launch file name",
      "default": "launch.py"
    }
  ]
}
